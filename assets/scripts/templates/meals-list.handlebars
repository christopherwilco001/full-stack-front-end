{{#each meals as |meal|}}
  <section data-id="{{meal.id}}">
    <h3>Meal:</h3>
      <p>Name: {{meal.name}}</p>
      <p>Calories: {{meal.calories}}</p>
      <p>ID: {{meal.id}}</p>

    <!-- <form class="favoriteMeal" data-id="{{meal.id}}">
      <button data-id="{{meal.id}}" class="btn btn-success btn-sm favorite">Add Favorite</button>
    </form> -->


      <button data-id="{{meal.id}}" class="btn btn-danger btn-sm deleteMeal">Delete Meal</button>

    <form class="updateMeal" data-id="{{meal.id}}">
      <button type="submit" value="Update Meal" data-id="{{meal.id}}"
      class="btn btn-outline-primary btn-sm update">Update Meal</button>
      <input type="text" name="meal[name]" placeholder="Name">
      <input type="text" name="meal[calories]" placeholder="Calories">
    </form>
  </section>

{{/each}}
